
<div class="row">
<div class="col-6">
    <h2><%= @patient.first_name %> <%= @patient.last_name %></h2>
    <h3><%= @patient.email %></h3>
    <%= link_to "New Request", new_patients_request_path, class: "btn btn-primary" %>
</div>
    <div class="col-6">
        <h2><ul>Requests for: </ul></h2>
        <% if @patient.requests.any? %>
            <% @patient.requests.each do |request| %>
                <li><%= request.specialty %> </li>
                Requested on: <%= request.created_at.strftime("%B %d %Y") %>
                <div class="float-right">
                    <%= link_to "View Request", patients_request_path(request), class: 'btn btn-primary' %>
                </div>
                <br />
                <hr />
            <% end %>
        
        <% end %>
    </div>
</div>

