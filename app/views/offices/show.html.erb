<div class="row">
<div class="col-lg-6 col-sm-6">
    <h2><%= @office.office_name %></h2>
    <h3><%= @office.email %></h3>
    <%= link_to "Create New Opening", new_offices_opening_path, class: "btn btn-primary" %>
</div>

<div class="col-lg-6 col-sm-6">
    <h2><u>Openings</u></h2>
    <% if @office.openings.any? %>
        <% @office.openings.each do |opening| %>
            <p><u><%= opening.dayofweek %></u></p>
            <p><u>at:</u> <%= opening.timeofday %></p>
            <p><u>for:</u> a <%= opening.specialty %> expert.</p>
            <p>Opening created: <%= opening.created_at.strftime("%B %d %Y") %></p>
            <div class="float-right">
                <%= link_to "View Opening", offices_opening_path(opening), class: 'btn btn-primary' %>
            </div>
            <br >
            <hr />
        <% end %>
    <% end %>
</div>
</div>
